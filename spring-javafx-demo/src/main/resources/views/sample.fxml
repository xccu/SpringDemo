<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<GridPane fx:controller="com.example.springjavafx.controllers.Controller"
          xmlns:fx="http://javafx.com/fxml"
          fx:id="mainPane"
          stylesheets="/css/sample.css"
          alignment="center" hgap="10" vgap="10">

        <VBox BorderPane.alignment="CENTER">
            <children>
                <TextArea fx:id="area" prefHeight="98.0" prefWidth="600.0" text="En Taro Tallnut!"/>
                <Button fx:id="btn" mnemonicParsing="false" text="Button"  onMouseClicked="#change"/>
            </children>
        </VBox>

</GridPane>